@model IEnumerable<Despensa.Models.despensa>

@{
    ViewData["Title"] = "Pantry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Pantries</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                    <br>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete Pantry</a>
                </td>
                <td>
                    @foreach (Product product in item.Products)
                    {
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="block image-main-section">
                            <div class="row img-part">
                                <form asp-controller="Products" asp-action="Buy" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="product">
                                        <img class="img-responsive img-display" src="@Html.DisplayFor(modelItem => product.Image_front_url)">
                                    </div>
                                    <div class="info">
                                        <div class="image-title">
                                            <h3>@Html.DisplayFor(modelItem => product.Name_Product)</h3>
                                        </div>
                                        <div class="nova_group">
                                            <h>Nova Group: @Html.DisplayFor(modelItem => product.NovaGroup)</h>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    }
                    
                </td>
            </tr>
        }
    </tbody>
</table>
